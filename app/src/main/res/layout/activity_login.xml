<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    
    <LinearLayout
        android:id="@+id/username_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y500"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帐号" />
        <EditText
            android:id="@+id/username_et"
            android:layout_width="@dimen/x500"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:singleLine="true"
            android:maxLength="10"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pwd_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y15"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码" />
        <EditText
            android:id="@+id/pwd_et"
            android:layout_width="@dimen/x500"
            android:layout_height="wrap_content"
            android:password="true"
            android:layout_marginLeft="@dimen/x20"
            android:singleLine="true"
            android:maxLength="10"
            />
    </LinearLayout>

    <CheckBox
        android:id="@+id/username_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textColor="#eb0500"
        android:layout_marginLeft="@dimen/x270"
        android:layout_marginTop="@dimen/y15"
        android:text="记住用户名和密码" />

    <CheckBox
        android:id="@+id/login_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x270"
        android:layout_marginTop="@dimen/y15"
        android:clickable="true"
        android:visibility="gone"
        android:text="自动登录" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="@dimen/x300"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:layout_marginLeft="@dimen/x380"
        android:text="登录" />

</LinearLayout>